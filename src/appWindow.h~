// struct contains all widgets belonging to the main window
typedef struct 
{
	GtkWidget *win,
			  *scrolled_window1,
			  *entry1,
			  *button1;
	struct {
		GtkTreeView *tree_view;
		GtkTreeModel *tree_model;
		GtkTreeIter iter;
	} tree_struct;
} WindowStruct;
GtkWidget *create_files_tree (void);